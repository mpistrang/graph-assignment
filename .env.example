# API Keys (required)
GITHUB_TOKEN=ghp_your_github_token_here
LINEAR_API_KEY=lin_api_your_linear_api_key_here

# LangSmith tracing (optional but recommended)
LANGSMITH_API_KEY=lsv2_your_langsmith_api_key_here
LANGSMITH_PROJECT=triage-graph

# =============================================================================
# Repository Configuration
# Configure which repos to search based on ticket classification
# =============================================================================

# Frontend repos (comma-separated if multiple)
TRIAGE_REPOS_FRONTEND=your-org/frontend-repo

# Backend repos
TRIAGE_REPOS_BACKEND=your-org/backend-repo

# Infrastructure repos
TRIAGE_REPOS_INFRA=your-org/infra-repo

# Repos to search when classification is unclear (comma-separated)
TRIAGE_REPOS_UNCLEAR=your-org/frontend-repo,your-org/backend-repo

# =============================================================================
# Linear Configuration
# =============================================================================

# Linear project keys to search (comma-separated, or empty for all)
TRIAGE_LINEAR_PROJECTS=ENG,INFRA

# =============================================================================
# Intercom Configuration
# =============================================================================

# Intercom provider mode: "mock" (default) or "real"
INTERCOM_MODE=mock

# Intercom API token (required when INTERCOM_MODE=real)
# INTERCOM_ACCESS_TOKEN=your_intercom_access_token_here

# =============================================================================
# Testing Configuration
# =============================================================================

# Test repo for GitHub integration tests (defaults to public langchain repo)
TEST_GITHUB_REPO=your-org/your-repo
